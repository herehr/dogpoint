{
  "name": "dogpoint-backend",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "engines": {
    "node": ">=20.12.2 <21"
  },
  "scripts": {
    "dev": "ts-node-dev src/index.ts",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:with-migrate": "npm run migrate:deploy && node dist/index.js",
    "migrate:deploy": "prisma migrate deploy --schema=./prisma/schema.prisma",
    "migrate:dev":    "prisma migrate dev --schema=./prisma/schema.prisma",
    "db:push":        "prisma db push --schema=./prisma/schema.prisma",
    "db:seed":        "prisma db seed --schema=./prisma/schema.prisma",
    "prisma:generate":"prisma generate --schema=./prisma/schema.prisma"
  },

  "dependencies": {
    "@aws-sdk/client-s3": "^3.882.0",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@prisma/client": "^6.16.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mime-types": "^2.1.4",
    "@types/multer": "^2.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "fluent-ffmpeg": "^2.1.3",
    "jsonwebtoken": "^9.0.2",
    "mime-types": "^2.1.35",
    "multer": "^2.0.2",
    "sharp": "^0.34.4",
    "stripe": "^18.5.0",
    "tmp-promise": "^3.0.3"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.27",
    "cross-env": "^10.0.0",
    "prisma": "^6.16.2",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4"
  },
  "overrides": {
    "glob": "^10.4.5",
    "minimatch": "^9.0.5"
  }
}
